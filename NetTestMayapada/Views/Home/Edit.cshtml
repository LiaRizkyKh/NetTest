@model NetTestMayapada.ViewModels.EditProfileViewModel
@{
    ViewData["Title"] = "Beranda";
}

<div class="container mt-5 mb-3">
    <div class="card shadow-lg p-4 mx-3">
        <h2>Beranda</h2>
        <div class="container mt-5">
            <div class="card shadow-lg p-4 mx-3">
                <form asp-action="Edit" method="post" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label class="form-label">Nama</label>
                        <input asp-for="Name" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Email</label>
                        <input asp-for="Email" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">User Level</label>
                        <select asp-for="Level" class="form-select">
                            <option value="Administrator" selected="@(Model.Level == "Administrator")">Administrator</option>
                            <option value="User" selected="@(Model.Level == "User")">User</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Foto Profil</label>
                        <input asp-for="PhotoProfileFile" type="file" class="form-control" />
                    </div>

                    <button type="submit" class="btn btn-success">Simpan Profil</button>
                    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Batal</a>
                </form>
            </div>
        </div>
    </div>
</div>
