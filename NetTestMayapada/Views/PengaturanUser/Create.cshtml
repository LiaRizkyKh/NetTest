@model NetTestMayapada.ViewModels.CreateUserViewModel

@section Scripts {
    @if (TempData["ToastrError"] != null)
    {
        <script>
            document.addEventListener('DOMContentLoaded', function () {
                toastr.options = { closeButton: true, progressBar: true, positionClass: 'toast-top-right', timeOut: 4000 };
                toastr.error('@TempData["ToastrError"]');
            });
        </script>
    }
}
<div class="container mt-5 mb-3">
    <div class="card shadow-lg p-4 mx-3">
        <h3>Tambah User</h3>
        <form asp-action="SubmitCreate" method="post" enctype="multipart/form-data">
            @Html.AntiForgeryToken()
            <div class="card-body">

                <div class="form-group">
                    <label>Nama <span class="labelMandatory">*</span></label>
                    @Html.TextBoxFor(m => m.FullName, new { @class = "form-control", @autocomplete = "off", @required = true })
                </div>

                <div class="form-group">
                    <label>Email <span class="labelMandatory">*</span></label>
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @autocomplete = "off", @type = "email", @required = true })
                </div>

                <div class="form-group">
                    <label>Password <span class="labelMandatory">*</span></label>
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", @autocomplete = "off", @required = true })
                </div>

                <div class="form-group">
                    <label>Konfirmasi Password <span class="labelMandatory">*</span></label>
                        @Html.Password("ConfirmPassword", null, new { @class = "form-control", @autocomplete = "off", @required = true })
                </div>

                <div class="form-group">
                    <label>Level <span class="labelMandatory">*</span></label>
                    @Html.DropDownListFor(m => m.Level, new List<SelectListItem>
                    {
                    new SelectListItem { Text = "Administrator", Value = "Administrator" },
                    new SelectListItem { Text = "User", Value = "User" }
                    },
                             "-Silahkan pilih-",
                             new { @class = "js-example-placeholder-multiple js-states form-control", @style = "width:100%", @required = true })
                </div>

                <div class="form-group">
                    <label>Foto Profil</label>
                    <input type="file" name="PhotoProfileFile" class="form-control" />
                </div>

                <div class="form-group mb-0">
                    <label>Status <span class="labelMandatory">*</span></label>
                    <div class="custom-control custom-radio">
                        @Html.RadioButtonFor(m => m.IsActive, true, new { @id = "IsActive", @required = true })&nbsp; Aktif &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                        @Html.RadioButtonFor(m => m.IsActive, false, new { @id = "IsActive", @required = true })&nbsp; Tidak Aktif &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    </div>
                </div>

                <div class="mt-3">
                    <button type="submit" class="btn btn-success">Simpan</button>
                    <a asp-action="Index" class="btn btn-secondary">Batal</a>
                </div>
            </div>
        </form>
    </div>
</div>
